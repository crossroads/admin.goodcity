<div class="offer-filters">
  <div class="row">
    <div class="small-6 columns">
      <button {{action "applyFilters"}} class="button expand filter-btn apply">
        {{t 'offer_filters.apply'}}
      </button>
    </div>
    <div class="small-6 columns">
      <button {{action "clearFilters"}} class="button expand filter-btn clear">
        {{t 'offer_filters.clear'}}
      </button>
    </div>
  </div>

  {{#if applyStateFilter}}
    {{partial "state_filters"}}
  {{else}}
    {{partial "time_filters"}}
  {{/if}}
</div>
