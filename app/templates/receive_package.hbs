<div id="{{concat 'stockitAddItemModal' package.id}}" class="stockitAddItemModal ui">

  <nav class="tab-bar new-item-nav">
    <section class="tab-bar-section">
      <h1 class="title">Receive-{{package.packageName}}</h1>
    </section>
  </nav>

  <div class="row">
    <div class="row">
      <div class="small-9 columns">
        <div class="row">
          <div class="small-4 columns item-label">
            Quantity*
          </div>
          <div class="small-8 columns">
            {{numeric-input id=(concat 'qty' package.id) name="qty" value=packageForm.quantity placeholder=(t "placeholder.qty") maxlength="8" pattern="\d{1,8}"}}
          </div>
        </div>

        <div class="row">
          <div class="small-4 columns item-label">
            Type*
          </div>
          <div class="small-8 columns">
            {{input value=package.packageName disabled=true}}
          </div>
        </div>
      </div>

      <div class="small-3 columns">
        <span class="image-box" {{action 'addItems'}}>
          {{#if package.item.displayImageUrl}}
            <img src={{package.item.displayImageUrl}} class="thumb" />
          {{else}}
            <i class="fa fa-camera"></i><br />
            Add Images
          {{/if}}
        </span>
      </div>
    </div>

    <div class="row">
      <div class="small-3 columns item-label">
        Description*
      </div>
      <div class="small-9 columns">
        {{auto-resize-textarea data-autoresize=true name="notes" value=packageForm.notes placeholder=(t "placeholder.comments") maxlength="50" required="required" pattern=".*\S.*" id=(concat 'notes' package.id)}}
      </div>
    </div>

    <div class="row">
      <div class="small-3 columns item-label">Quality*</div>

      <div class="small-4 columns">
        {{select-list
          content=grades
          on-change=(action (mut selectedGrade))
          selectedValue=selectedGrade
          value=selectedGrade
          selectArrow=true }}
      </div>

      <div class="small-5 columns end">
        {{select-list
          content=donorConditions
          on-change=(action (mut selectedCondition))
          selectedValue=selectedCondition
          value=selectedCondition
          selectArrow=true }}
      </div>
    </div>

    <div class="row">
      <div class="small-3 columns item-label">Locations*</div>
      <div class="small-9 columns">
        {{custom-select2 content=locations record=location recordId=locationId placeholder=(t "receive_package.add_location")}}
      </div>
    </div>

    <div class="row">
      <div class="small-3 columns item-label">Size(cm)</div>
      <div class="small-3 columns">
        {{numeric-input name="length" id=(concat 'length' package.id) value=packageForm.length placeholder=(t "placeholder.length") maxlength="8" pattern="\d{1,8}"}}
      </div>
      <div class="small-3 columns">
        {{numeric-input id=(concat 'width' package.id) name="width" value=packageForm.width placeholder=(t "placeholder.width") maxlength="5" pattern="\d{1,5}"}}
      </div>
      <div class="small-3 columns end">
        {{numeric-input id=(concat 'height' package.id) name="height" value=packageForm.height placeholder=(t "placeholder.height") maxlength="5"  pattern="\d{1,5}" }}
      </div>
    </div>

    <div class="row">
      <div class="small-3 columns item-label">Labels</div>
      <div class="small-3 columns">
        {{numeric-input id=(concat 'labels' package.id) name="labels" value=packageForm.labels placeholder="labels" maxlength="8" pattern="\d{1,8}"}}
      </div>
      <div class="small-2 columns item-label">
        Inventory#
      </div>
      <div class="small-4 columns end">
        {{numeric-input id=(concat 'inventoryNumber' package.id) name="inventoryNumber" value=inventoryNumber placeholder="Inventory Number" maxlength="8" pattern="\d{1,8}"}}
      </div>
    </div>

    <div class="row">
      <div class="small-3 columns item-label">Publish</div>
      <div class="small-2 columns end">
        {{input type="checkbox" id=(concat 'publishItem' package.id) checked=false}}
      </div>
    </div>

    <div class="row">
      <div class="small-6 columns">
        <a class="button expand secondary closeLink action1" {{action 'moveBack'}}>{{t "receive_package.cancel"}}</a>
      </div>
      <div class="small-6 columns">
        <button class="button expand action2 confirmLink" {{action 'receivePackage'}}>
         Receive & Print <i class="fa fa-print"></i>
        </button>
      </div>
    </div>
  </div>
</div>
