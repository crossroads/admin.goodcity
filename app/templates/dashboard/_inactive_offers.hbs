  <div class="small-4 columns" {{action 'clearAndApplyStateFilter' 'received' selfReview target=filterService}}>
    {{t "dashboard.received"}} <i class="fa fa-thumbs-up"></i>
  </div>

  <div class="small-4 columns" {{action 'clearAndApplyStateFilter' 'cancelled' selfReview target=filterService}}>
    {{t "dashboard.cancelled"}} <i class="fa fa-thumbs-down"></i>
