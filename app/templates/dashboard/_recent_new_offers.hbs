<div class="small-12 columns summary recent_offers counts" >
  <h2 class="offer-title">
    <i class="fa fa-shopping-basket"></i> New Offers({{model.offersCount.submitted}})
  </h2>

  {{#each model.recentOffers as |offer|}}
    {{#link-to 'review_offer' offer href=false}}
      <div class="row offer_header">
        <div class="small-4 medium-4 large-4 columns">
          <img src={{offer.displayImageUrl}}>
        </div>
        <div class="small-4 medium-4 large-4 columns order_user_name">
          {{offer.createdBy.fullName}}
        </div>
        <div class="small-4 medium-4 large-4 columns order_state">
          {{offer.id}}
        </div>
      </div>
    {{/link-to}}
  {{/each}}
  <div align="center" class="view_all" {{action 'clearAndApplyStateFilter' 'submitted' selfReview target=filterService}}>View all new offers</div>
</div>
