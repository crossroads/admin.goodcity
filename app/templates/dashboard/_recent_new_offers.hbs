<div class="row">
  <div class="small-12 columns summary recent_offers counts" >
    <h2 class="offer-title">
      <i class="fa fa-shopping-basket"></i> {{t "dashboard.new_offers"}}
    </h2>

    {{#each model.recentOffers as |offer|}}
      {{#link-to 'review_offer' offer}}
        <div class="row offer_header end">
          <div class="small-4 medium-4 large-4 columns">
            <img src={{offer.displayImageUrl}}>
          </div>
          <div class="small-4 medium-4 large-4 columns offer_user_name">
            {{offer.createdBy.fullName}}
          </div>
          <div class="small-4 medium-4 large-4 columns offer_code">
            {{offer.id}}
          </div>
        </div>
      {{/link-to}}
    {{/each}}
    <div align="center" class="view_all">
      <div {{action 'clearAndApplyStateFilter' 'submitted' target=filterService}}>
        {{t "dashboard.view_all_offers"}}
      </div>
    </div>
  </div>
</div>
