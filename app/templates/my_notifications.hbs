<nav class="tab-bar my-notifications">
  <div class="row">
    <div class="small-5 large-6 columns link">
      <a href="#" {{action 'toggleShowUnread'}}>
        {{#if showUnread}}
          {{t "my_notifications.all_notifications"}}
        {{else}}
          {{t "my_notifications.show_unread"}}
        {{/if}}
      </a>
    </div>
    <div class="small-5 large-6 columns link">
      <a href="#" {{action 'markAllRead'}}>
        {{t "my_notifications.mark_all_read"}} <i class="fa fa-check"></i>
      </a>
    </div>
    <div class="small-2 columns">
    </div>
  </div>
</nav>

<section class="main-section notifications-section">
  <div class="row">
    <div class="small-12 columns notifications-threads">

      {{#if displayMessages}}
        {{#infinite-list height="82vh" loadMore=(action "loadMoreMessages") }}
          <ul class="list list-notifications">
            {{#each notifications as |notification|}}
              <li>{{partial "notificationThread"}}</li>
            {{/each}}
          </ul>
        {{/infinite-list}}
      {{/if}}

    </div>
  </div>
</section>
