<div class="state-filter-block">
  {{!-- Offer Priority Checkbox --}}
  <div class="row">
    <div class="state-filter-title small-12 medium-12 large-12 columns">
      {{t 'offer_filters.show_priority_offers'}}
    </div>
  </div>
  <div class="row">
    <div class='checkbox-area small-12 medium-12 large-12 columns'>
      {{offer-filter-checkbox name="priorityOffers"}}
    </div>
  </div>
  <div class="row">
    <div class='checkbox-area small-12 medium-12 large-12 columns'>
      {{offer-filter-checkbox name="publishedOffers"}}
    </div>
  </div>
  <br/>

  {{!-- Offer Status Block --}}
  <div class="row">
    <div class="state-filter-title small-12 medium-12 large-12 columns">
      {{t 'offer_filters.offer_statuses'}}
    </div>
  </div>
  {{#each offerStateFilters as |state|}}
    <div class="row">
      <div class='checkbox-area small-12 medium-12 large-12 columns'>
        {{offer-filter-checkbox name=state}}
      </div>
    </div>
  {{/each}}
</div>
