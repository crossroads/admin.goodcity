<div class="row search-box ui">
  <div class="row">
    <div class="small-2 columns back-icon" {{action "cancelSearch"}}>
      <i class="fa fa-angle-left"></i>
      <span>{{t 'offer_filters.back'}}</span>
    </div>
    <div class="small-10 columns">
      {{focus-textfield
        name="searchText"
        id="searchText"
        placeholder=(t 'search.placeholder')
        value=searchText }}

      {{#if hasSearchText}}
        <i class="fa fa-times-circle clear-search" {{action "clearSearch"}}></i>
      {{/if}}
    </div>
  </div>
</div>

<section class="main-section review_offer search search_offer">
  <div class="row">
    <div class="small-12 columns item-content">
      <div class="new-user">
        {{t "offer_creation.search_users.find_donor"}}
        {{#link-to "donors.new"}}
          {{t "offer_creation.search_users.create_donor"}}
        {{/link-to}}
      </div>
      {{#if displayResults}}
        {{#infinite-list height="82vh" loadMore=(action "loadMoreUsers") as |users| }}
          <ul class="list list-activity list-offer-items">
            {{#each users as |user|}}
              <li {{action 'goToDetails' user.id}}>
                {{#link-to 'review_offer.donor_details' offer.id tagName='div' href=false}}
                  <div class="row">
                    <div class="small-10 columns user_name">
                      {{user.fullName}}
                    </div>
                    <div class="small-2 columns">
                      <span class="user-mobile">{{user.mobile}}</span>
                    </div>
                  </div>
                {{/link-to}}
              </li>
            {{else}}
            <div class="no_result">{{t "search.no_results"}}</div>
            {{/each}}
          </ul>
        {{/infinite-list}}
      {{/if}}
    </div>
  </div>
</section>
