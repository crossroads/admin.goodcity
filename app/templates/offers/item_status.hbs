    {{ offer.computedExpectingPackageCount }} {{t 'review_offer.expecting'}},
    {{ offer.computedReceivedPackageCount }} {{t 'offer.offer_details.received'}},
    {{ offer.computedMissingPackageCount }} {{t 'offer.offer_details.missing'}}
