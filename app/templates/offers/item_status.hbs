    {{ offer.computedApprovedItemsCount }} {{t 'offer.offer_details.accepted'}},
    {{ offer.computedRejectedItemsCount }} {{t 'offer.offer_details.rejected'}},
    {{ offer.computedSubmittedItemsCount }} {{t 'offer.offer_details.pending'}}
